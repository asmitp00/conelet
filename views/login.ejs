<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Account - CONÉLET</title>
    <!-- We use a new, dedicated CSS file for this page -->
    <link rel="stylesheet" href="/css/login.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <h2>C<span class="logo-span">O</span>NÉLET</h2>

            <!-- This EJS block will show errors from the server -->
            <% if (typeof error !== 'undefined' && error) { %>
                <p class="error-message"><%= error %></p>
            <% } %>

            <div class="tab-buttons">
                <button id="tab-login" class="tab active">Login</button>
                <button id="tab-register" class="tab">Register</button>
            </div>

            <!-- Login Form -->
            <form id="form-login" action="/login" method="POST" class="form-section">
                <div class="form-group">
                    <label for="login-email">Email</label>
                    <input type="email" id="login-email" name="email" required>
                </div>
                <div class="form-group">
                    <label for="login-password">Password</label>
                    <input type="password" id="login-password" name="password" required>
                </div>
                <button type="submit" class="btn-primary">Login</button>
            </form>

            <!-- Register Form (Hidden) -->
            <form id="form-register" action="/register" method="POST" class="form-section" style="display: none;">
                <div class="form-group">
                    <label for="register-name">Full Name</label>
                    <input type="text" id="register-name" name="name" required>
                </div>
                <div class="form-group">
                    <label for="register-email">Email</label>
                    <input type="email" id="register-email" name="email" required>
                </div>
                <div class="form-group">
                    <label for="register-password">Password</label>
                    <input type="password" id="register-password" name="password" required>
                </div>
                <button type="submit" class="btn-primary">Create Account</button>
            </form>
        </div>
    </div>
    <!-- We link to a new, dedicated JS file for the tabs -->
    <script src="/js/login.js"></script>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout - CONELET</title>
    <link rel="stylesheet" href="/cart/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="page-container">

        <%- include('partials/app-header') %>

        <main class="checkout-main">
            <div class="checkout-form-container">

                <div class="checkout-steps">
                    <div id="step-1" class="step active">Shipping <i class="fas fa-check-circle"></i></div>
                    <div id="step-2" class="step">Payment <i class="fas fa-check-circle"></i></div>
                </div>

                <div id="shipping-form" class="account-details-section">
                    <h3>Shipping details</h3>
                    <div class="form-group">
                        <label for="name">Full Name</label>
                        <input type="text" id="name" placeholder="John M. Doe" class="input-field">
                    </div>
                    <div class="form-group">
                        <label for="address">Address</label>
                        <input type="text" id="address" placeholder="1234 Main St" class="input-field">
                    </div>
                    <div class="form-group">
                        <label for="city">City</label>
                        <input type="text" id="city" placeholder="Anytown" class="input-field">
                    </div>
                </div>

                <div id="payment-form" class="account-details-section" style="display: none;">
                    <h3>Payment details</h3>
                    <div class="form-group">
                        <label for="card-number">Card Number</label>
                        <input type="text" id="card-number" placeholder="0000 0000 0000 0000" class="input-field">
                    </div>
                    <div class="form-group">
                        <label for="card-expiry">Expiry Date</label>
                        <input type="text" id="card-expiry" placeholder="MM / YY" class="input-field">
                    </div>
                    <div class="form-group">
                        <label for="card-cvc">CVC</label>
                        <input type="text" id="card-cvc" placeholder="123" class="input-field">
                    </div>
                    <a href="#" id="link-back-to-shipping" class="back-link" style="display: inline-block; margin-top: 15px;">&larr; Back to Shipping</a>
                </div>


                <div class="checkout-buttons-bottom">
                    <button class="btn-secondary">Cancel order</button>
                    <button id="btn-to-payment" class="btn-primary">Continue to Payment</button>
                    <button id="btn-pay" class="btn-primary" style="display: none;">Pay Now</button>
                </div>
            </div>

            <div class="order-summary-container">
                <h3>Order Summary</h3>

                <div id="order-items-container">
                    <% if (cartItems && cartItems.length > 0) { %>
                        <% cartItems.forEach(item => { %>
                            <div class="order-item" id="item-row-<%= item._id %>">
                                <img src="<%= item.image %>" alt="<%= item.name %>">
                                <div class="item-details">
                                    <h4><%= item.name %></h4>
                                    <p>$<%= item.price.toFixed(2) %></p>
                                </div>
                                <div class="quantity-control">
                                    <button class="btn-quantity" data-id="<%= item._id %>" data-action="decrement">-</button>
                                    <span class="quantity-value"><%= item.quantity %></span>
                                    <button class="btn-quantity" data-id="<%= item._id %>" data-action="increment">+</button>
                                </div>
                                <button class="btn-remove" data-id="<%= item._id %>">&times;</button>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <p>Your cart is empty.</p>
                    <% } %>
                </div>

                <div class="gift-discount">
                    <input id="discount-code" type="text" placeholder="Gift Card / Discount code">
                    <button id="btn-apply-discount" class="btn-outline">Apply</button>
                </div>

                <div class="summary-details">
                    <div class="summary-row">
                        <span>Sub total</span>
                        <span id="summary-subtotal">$<%= subtotal.toFixed(2) %></span>
                    </div>
                    <div class="summary-row">
                        <span>Tax</span>
                        <span id="summary-tax">$<%= tax.toFixed(2) %></span>
                    </div>
                    <div class="summary-row">
                        <span>Shipping</span>
                        <span id="summary-shipping">FREE</span>
                    </div>
                    <div id="discount-row" class="summary-row" style="display: none;">
                        <span>Discount</span>
                        <span id="summary-discount">-$0.00</span>
                    </div>
                    <div class="summary-row total">
                        <span>Total</span>
                        <span id="summary-total">$<%= total.toFixed(2) %></span>
                    </div>
                </div>
            </div>
            </main>
    </div>

    <script src="/cart/checkout.js"></script>
</body>
</html>
